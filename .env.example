# ============================================================================
# Business Planner - Environment Variables (Example)
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git!

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_API_KEY_HERE
OPENAI_ORG_ID=

# Model Selection (GPT-5 Nano for cost optimization)
MODEL_PARSER=gpt-4o-mini
MODEL_REASONING=gpt-4o-mini
MODEL_ANALYTICS=gpt-4o
MODEL_VOICE=whisper-1
MODEL_EMBEDDINGS=text-embedding-3-small
MAX_CONTEXT_TOKENS=128000

# Telegram Bot
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_FROM_BOTFATHER
TELEGRAM_ADMIN_ID=123456789
TELEGRAM_SECRET_TOKEN=random_secret_webhook_token_12345
TELEGRAM_WEBHOOK_URL=https://your-domain.com
TELEGRAM_USE_WEBHOOK=true

# Database (for Docker setup, use these defaults)
DATABASE_URL=postgresql+asyncpg://planner:planner123@postgres:5432/planner
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# RAG Configuration
EMBEDDING_DIMENSION=1536
SIMILARITY_THRESHOLD=0.7
RAG_TOP_K=5

# Business Rules
DEFAULT_DEADLINE_DAYS=7
WORKDAY_START_HOUR=9
WORKDAY_END_HOUR=18
TIMEZONE=Asia/Almaty
TIME_MORNING=09:00
TIME_AFTERNOON=13:00
TIME_EVENING=18:00

# Rate Limiting
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500

# Monitoring
SENTRY_DSN=
ENABLE_METRICS=true
